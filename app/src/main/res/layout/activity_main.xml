<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.MainActivity"
    android:background="#FFf2f0f1">

    <Button
        android:id="@+id/btnde"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginTop="84dp"
        android:text="De"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:background="@drawable/roundedbutton"
        android:textColor="#FFFFFFFF"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="298dp"
        android:layout_height="34dp"
        android:layout_marginTop="76dp"
        android:text="Conversor de Moedas BTG"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="#1e8e88"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/btnpara"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="84dp"
        android:text="Para"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.048"
        app:layout_constraintStart_toEndOf="@+id/btnde"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:background="@drawable/roundedbutton"
        android:textColor="#FFFFFFFF"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="110dp"
        android:layout_height="27dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="84dp"
        android:text="Valor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnde"
        android:textStyle="bold"
        android:textSize="17sp"
        android:textAlignment="center"
        android:textColor="#1e8e88"/>

    <EditText
        android:id="@+id/valor"
        android:layout_width="153dp"
        android:layout_height="50dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="68dp"
        android:ems="10"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/btnpara"
        android:inputType="number"/>

    <Button
        android:id="@+id/btnconverter"
        android:layout_width="117dp"
        android:layout_height="42dp"
        android:layout_marginTop="116dp"
        android:background="@drawable/roundedbuttoncinza"
        android:text="Converter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resultado"
        android:textColor="#FFFFFFFF"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="97dp"
        android:layout_height="24dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="60dp"
        android:text="Resultado"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:textColor="#1e8e88"
        android:textSize="17sp"
        android:textAlignment="center"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/resultado"
        android:layout_width="140dp"
        android:layout_height="29dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="48dp"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/valor"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="57dp"
        android:layout_height="28dp"
        android:layout_marginTop="96dp"
        android:text="Para"
        app:layout_constraintEnd_toStartOf="@+id/btnpara"
        app:layout_constraintStart_toEndOf="@+id/btnde"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:textAlignment="center"
        android:textSize="15sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>