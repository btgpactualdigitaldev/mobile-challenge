<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/motion_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/fragment_content_scene"
    tools:context=".MainActivity">

    <View
        android:id="@+id/layer_top"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="?attr/colorPrimary" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/input_value"
        app:errorEnabled="true"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="@color/colorPrimary"
        android:inputType="numberDecimal"
        android:hint="@string/hint_input_value"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textColorHighlight="@android:color/white"
        android:textColorHint="@android:color/white"
        android:textSize="80sp" />

    <Button
        android:id="@+id/button_start_value"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="@dimen/dimen16dp"
        android:text="@string/start_value"
        android:textColor="@android:color/white"
        app:rippleColor="@color/colorPrimaryDark"
        app:shapeAppearance="@style/AppTheme.ShapeButton"
        app:strokeColor="@android:color/white"
        app:strokeWidth="1dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="248dp" />


    <Button
        android:id="@+id/button_end_value"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="@dimen/dimen16dp"
        android:text="@string/end_value"
        android:textColor="@android:color/white"
        app:rippleColor="@color/colorPrimaryDark"
        app:shapeAppearance="@style/AppTheme.ShapeButton"
        app:strokeColor="@android:color/white"
        app:strokeWidth="1dp" />

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/fab_result"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/result_bg"
        android:elevation="6dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_baseline_view_agenda_24"
        android:tint="@color/colorPrimaryDark"
        app:altSrc="@drawable/ic_baseline_add_24"
        app:overlay="false" />

    <View
        android:id="@+id/layer_bottom"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorPrimaryDark" />

    <TextView
        android:id="@+id/input_result_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="26sp"/>

    <TextView
        android:id="@+id/input_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="80sp"/>


</androidx.constraintlayout.motion.widget.MotionLayout>