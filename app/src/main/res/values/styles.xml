<resources>

    <style name="Button" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textsize_button</item>
        <item name="android:lineSpacingExtra">@dimen/linespacingextra_button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">@dimen/size_fixed_minimum</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/text_regular</item>
    </style>

    <style name="Button.DialogSpinnerItem">
        <item name="android:background">@color/background_light</item>
        <item name="android:textColor">@color/text_main</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/text_light</item>
        <item name="android:textSize">@dimen/textsize_button_dialogspinner</item>
        <item name="android:lineSpacingExtra">0sp</item>
        <item name="android:minHeight">@dimen/height_dialogspinner_item</item>
    </style>

    <style name="ButtonSecondary" parent="Button">
        <item name="android:background">@drawable/selector_button_secondary</item>
        <item name="android:textColor">@color/text_button_secondary_active</item>
    </style>

    <style name="ButtonSecondary.Card">
        <item name="android:textColor">@color/text_main</item>
        <item name="android:textSize">@dimen/textsize_xsmall</item>
        <item name="android:lineSpacingExtra">@dimen/linespacingextra_xsmall</item>
        <item name="android:fontFamily">@font/text_bold</item>
    </style>

    <style name="TextScreenTitle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/text_main</item>
        <item name="android:textSize">@dimen/textsize_screentitle</item>
        <item name="android:lineSpacingExtra">@dimen/linespacingextra_screentitle</item>
        <item name="layout_constraintHorizontal_bias">0</item>
        <item name="layout_constrainedWidth">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="android:fontFamily">@font/text_extra_bold</item>
    </style>

    <style name="TextSubTitle" parent="TextScreenTitle">
        <item name="android:textColor">@color/text_main</item>
        <item name="android:textSize">@dimen/textsize_subtitle</item>
        <item name="android:lineSpacingExtra">@dimen/linespacingextra_subtitle</item>
        <item name="android:layout_marginTop">@dimen/margin_xxsmall</item>
        <item name="android:fontFamily">@font/text_regular</item>
    </style>

    <style name="DialogFullScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="EditTextMain" parent="Base.Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textsize_input_large</item>
        <item name="android:textColor">@color/selector_edittext_text</item>
        <item name="android:paddingBottom">@dimen/padding_inputhint_medium</item>
        <!-- Cor do texto de marcação -->
        <item name="android:textColorHint">@color/text_main_alpha</item>
        <item name="colorControlNormal">@color/text_main_alpha</item>
        <item name="colorControlActivated">@color/text_main</item>
    </style>

</resources>

