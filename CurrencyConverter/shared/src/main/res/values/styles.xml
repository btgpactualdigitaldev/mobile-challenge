<resources>

    <style name="MessageTextStyle" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/_20sdp</item>
        <item name="android:layout_marginEnd">@dimen/_20sdp</item>
        <item name="android:fontFamily">@font/sansprolight</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">@dimen/_16ssp</item>
    </style>

    <style name="CurrencyContainerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_100sdp</item>
        <item name="android:layout_marginStart">@dimen/_10sdp</item>
        <item name="android:layout_marginEnd">@dimen/_10sdp</item>
        <item name="android:background">@drawable/view_currency_background</item>
        <item name="android:elevation">@dimen/_5sdp</item>
        <item name="android:padding">@dimen/_10sdp</item>
    </style>
</resources>